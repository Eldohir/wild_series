{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<h1>Toutes les séries de notre super site :
	</h1>
	<div class="container">
		<div class="media d-flex flex-wrap">
			{% for program in programs %}
				<div class="media d-flex flex-wrap m-2 mx-auto">
					<div class="card shadow-lg" style="width: 18rem;">
						<img src="{{program.poster}}" class="img-fluid" alt="{{ program.title }}">
						<div class="card-body">
							<h5 class="card-title">{{ program.title }}</h5>
							<p class="card-text">{{ program.category.name }}</p>
							<p class="card-text">{{ program.synopsis }}</p>
							<a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-primary">En savoir plus</a>
						</div>
					</div>
				</div>
			{% else %}
				Aucune série trouvée.
			{% endfor %}
		</div>
	</div>


	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
